<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galtama.engsoft4.FazerOfertaActivity">

    <EditText
        android:id="@+id/edit_text_oferta_valor"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:background="@null"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText4"
        app:layout_constraintLeft_toRightOf="@+id/editText4"
        android:layout_marginLeft="38dp" />

    <Button
        android:id="@+id/button_enviar_oferta"
        android:layout_width="154dp"
        android:layout_height="123dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ENVIAR"
        app:layout_constraintLeft_toLeftOf="@+id/editText4"
        app:layout_constraintRight_toRightOf="@+id/edit_text_oferta_valor"
        app:layout_constraintHorizontal_bias="0.544"
        android:layout_marginTop="74dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:background="@null"
        android:ems="10"
        android:inputType="none"
        android:text="Inserir Valor:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
