<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:layout_marginTop="39dp"
            android:text="CADASTRO"
            android:inputType="none"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:editable="false"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/editText_register_user_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nome"
            android:inputType="textPersonName"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/editText_register_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e-mail"
            android:inputType="textPersonName"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/editText_register_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="2dp"
            android:ems="10"
            android:hint="senha"
            android:inputType="textPersonName"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/editText_register_user_capitalInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="2dp"
            android:ems="10"
            android:hint="capital inicial"
            android:inputType="textPersonName"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/button_register_user"
            android:layout_width="127dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="ENVIAR" />



    </LinearLayout>


</ScrollView>
